<div class = 'row'>

  <div class = "col-12">
    <h2>宿題</h2>

    <table class="calendar-table table">
      <thead>
        <tr>
          <% Date::DAYNAMES.each do |dayname| %>
            <th><%= dayname %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% start_date = Date.today.beginning_of_month.beginning_of_week %>
        <% end_date = Date.today.end_of_month.end_of_week %>
        <% (start_date..end_date).each_slice(7) do |week| %>
          <tr>
            <% week.each do |date| %>
              <td class="day <%= 'today' if date == Date.today %>">
                <p class="p-down date"><%= date.day %></p>
                <% @works.select { |work| work.deadline == date }.each do |work| %>
                  <div><p><%= link_to "#{work.content}", work_path(work) %></p></div>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>





  </div>

</div>